---
import type { CollectionEntry } from "astro:content";
import { getCollection, render } from "astro:content";

import BaseLayout, {
  type Props as BaseLayoutProps,
} from "../../layouts/BaseLayout.astro";
import Container from "../../components/Container";
import BlogPost from "../../components/BlogPost";
import Footer from "../../components/Footer";
import BlogPostSideMenu from "../../components/BlogPostSideMenu";

import { headingToTocItems } from "../../helpers/utils";

import { SITE_TITLE } from "../../constants";

export const getStaticPaths = async () => {
  const allBlogPosts = await getCollection("blog");
  return allBlogPosts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
};

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { Content, headings, remarkPluginFrontmatter } = await render(post);

const title = `${post.data.title} | ${SITE_TITLE}`;
const description = post.data.description ?? remarkPluginFrontmatter.excerpt;
const ogpImageUrl = new URL(`/blog/${post.id}.ogp.png`, Astro.url).href;

const structuredData: NonNullable<BaseLayoutProps["structuredData"]> = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  // The Google-supported properties/Recommended properties
  // https://developers.google.com/search/docs/appearance/structured-data/article#article-types
  author: {
    "@type": "Person",
    name: "YAMAMOTO Tatsuya",
    image: "https://t28.dev/_astro/profile-pic.By1PFn3M.jpg",
    sameAs: [
      "https://twitter.com/T28_tatsuya",
      "https://x.com/T28_tatsuya",
      "https://github.com/TatsuyaYamamoto",
    ],
  },
  headline: title,
  datePublished: post.data.date.toISOString(),
  ...(post.data.modified && {
    dateModified: post.data.modified?.toISOString(),
  }),
  // Other properties
  description: description,
};
---

<BaseLayout
  title={title}
  description={description}
  faviconType="t28.dev"
  ogpImageUrl={ogpImageUrl}
  structuredData={structuredData}
>
  <header class="my-12">
    <Container>
      <a href="/" class="text-(length:--fontSize-4) font-bold no-underline">
        {SITE_TITLE}
      </a>
    </Container>
  </header>
  <Container className="flex justify-between">
    <div class="w-full md:w-[calc(100%-var(--container-xs)-var(--spacing)*4)]">
      <BlogPost
        title={post.data.title}
        publishedDate={post.data.date}
        modifiedDate={post.data.modified}
        category={post.data.category}
      >
        <div class="blog-post-content">
          <Content />
        </div>
      </BlogPost>
    </div>
    <div class="w-xs max-md:hidden">
      <BlogPostSideMenu client:visible tocItems={headingToTocItems(headings)} />
    </div>
  </Container>
</BaseLayout>
<Footer />
